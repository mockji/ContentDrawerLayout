<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="left|center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@mipmap/ic_account_child_black_36dp"
            style="@style/DrawerNav_Icon"
            android:layout_width="@dimen/drawer_menu_icon_size"
            android:layout_height="@dimen/drawer_menu_icon_size"
            android:id="@+id/icon_drawer_menu"/>

        <TextView
            android:id="@+id/title_drawer_menu"
            android:text="法国小飞侠"
            style="@style/DrawerNav_Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>

